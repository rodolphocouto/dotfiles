# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "ipv6"
order += "wireless _first_"
#order += "ethernet _first_"
order += "path_exists VPN"
order += "volume master"
order += "battery all"
order += "disk /"
#order += "load"
order += "memory"
order += "cpu_usage"
order += "tztime local"

wireless _first_ {
        format_up = "︁%quality %essid %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = " %ip (%speed)"
        format_down = " down"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
        format = "vpn: %status"
}

volume master {
        format = "vol: %volume"
        format_muted = "vol:︁ muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "︁︁ chr:"
        status_bat = "︁ bat:"
        status_unk = "? unk"
        status_full = "︁ bat:︁"
        path = "/sys/class/power_supply/BAT%d/uevent"
        last_full_capacity = true
        low_threshold = 10
}

disk "/" {
        format = " hdd: %percentage_used"
}

load {
        format = " %1min"
}

cpu_usage {
        format = " cpu: %usage"
        max_threshold = 75
}

memory {
        format = " mem: %percentage_used"
        threshold_degraded = "1G"
        format_degraded = " mem: < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
